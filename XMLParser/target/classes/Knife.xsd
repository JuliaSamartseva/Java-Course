<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="knives">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="knife" maxOccurs="unbounded">

          <xs:complexType>
            <xs:sequence>
              <xs:element type="xs:string" name="type"/>

              <xs:element name="handy">
                <xs:simpleType>
                  <xs:restriction base="xs:string">
                    <xs:pattern value="one|two"/>
                  </xs:restriction>
                </xs:simpleType>
              </xs:element>

              <xs:element type="xs:string" name="origin"/>

              <xs:element name="visualCharacteristics">
                <xs:complexType>
                  <xs:sequence>

                    <xs:element name="length">
                      <xs:complexType>
                        <xs:simpleContent>
                          <xs:extension base="xs:int">
                            <xs:attribute type="xs:string" name="unit" fixed="cm"/>
                          </xs:extension>
                        </xs:simpleContent>
                      </xs:complexType>
                    </xs:element>

                    <xs:element name="width">
                      <xs:complexType>
                        <xs:simpleContent>
                          <xs:extension base="xs:int">
                            <xs:attribute type="xs:string" name="unit" fixed="mm"/>
                          </xs:extension>
                        </xs:simpleContent>
                      </xs:complexType>
                    </xs:element>

                    <xs:element name="bladeMaterial">
                      <xs:simpleType>
                        <xs:restriction base="xs:string">
                          <xs:pattern value="steel|iron|copper"/>
                        </xs:restriction>
                      </xs:simpleType>
                    </xs:element>

                    <xs:element name="handleMaterial">
                      <xs:simpleType>
                        <xs:restriction base="xs:string">
                          <xs:pattern value="wood|plastic|metal"/>
                        </xs:restriction>
                      </xs:simpleType>
                    </xs:element>

                    <xs:element type="xs:boolean" name="hasBloodStream"/>

                  </xs:sequence>
                </xs:complexType>
              </xs:element>

              <xs:element type="xs:boolean" name="isValuable"/>

            </xs:sequence>
            <xs:attribute name="id" type="xs:positiveInteger" use="required"/>
          </xs:complexType>

        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>